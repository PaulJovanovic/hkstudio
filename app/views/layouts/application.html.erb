      </div>
    </div>
  </div>
  <div id="content">
    <div class="dvl visible-xs"></div>
    <div class="row pbxxxxl mhn">
      <div id="navigation" class="navigation col-sm-4 col-md-3 col-lg-2 phn">
        <div class="js-scroll-with-screen" data-fix-limit-px="768">
          <div class="navigation-inner pal bg-4 brrm scroll-y">
            <div class="c-accent fsxs text-center">
              <%= link_to "About", about_path, class: "c-accent" %> - <%= link_to "Terms", terms_path %> - <%= link_to "Contact", contact_path %>
            </div>
            <div class="mtm">
              <%= content_for :navigation %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-8 col-md-9 col-lg-10 phn">
        <div class="phl">
          <%= content_for :content %>
