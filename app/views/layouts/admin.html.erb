              <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                Products
              </div>
            <% end %>
          </div>
          <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "categories" %>">
            <%= link_to admin_categories_path do %>
              <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                Categories
              </div>
            <% end %>
          </div>
          <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "rentals" %>">
            <%= link_to admin_rentals_path do %>
              <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
