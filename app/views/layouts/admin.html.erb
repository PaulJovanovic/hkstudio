<!DOCTYPE html>
<html>
<head>
  <title>Hkstudio - Admin Panel</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css"/>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="absolute top left fill zxs">
    <div class="row mhn">
      <div class="col-sm-3 phn absolute top bottom bg-1 hidden-xs" style="overflow-y: auto">
        <div class="absolute top left right dvl">
          <div class="dvl lhl c-4 fsl text-center">
            <%= link_to "HK STUDIO", root_path %>
          </div>
          <div class="c-4 fss bss bwvs bc-2">
            <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "products" %>">
              <%= link_to admin_products_path do %>
                <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                  Products
                </div>
              <% end %>
            </div>
            <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "categories" %>">
              <%= link_to admin_categories_path do %>
                <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                  Categories
                </div>
              <% end %>
            </div>
            <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "rentals" %>">
              <%= link_to admin_rentals_path do %>
                <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                  Requests
                </div>
              <% end %>
            </div>
            <div class="bss bwts-plus bc-2<%= " active" if @admin_navigation == "editables" %>">
              <%= link_to admin_editables_path do %>
                <div class="paxs bg-1 bg-2-hover bg-3-active c-1-active bss bwts-plus bc-2">
                  Editables
                </div>
              <% end %>
            </div>
            <div class="bss bwts-plus bc-2">
