<div class="row nmhxs">
  <div class="col-lg-8 phxs">
    <table class="full-width">
      <tr>
        <td class="fsxl">
          <%= @product.name %>
        </td>
        <td class="text-right">
          <%= link_to "Edit", edit_admin_product_path(@product), class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
    <div class="row nmhxs">
      <div class="col-sm-4 phxs mtm">
        <%= image_tag @product.photo.url(:medium), class: "img-responsive bss bwam bc-12" %>
      </div>
      <div class="col-sm-8 phxs mtm">
        <div class="row nmhxs mtxs-plus">
          <div class="col-xs-6 phxs">
            <b>Active</b>
          </div>
          <div class="col-xs-6 phxs text-right">
            <% if @product.active? %>
              <span class="c-green">Yes</span>
            <% else %>
              <span class="c-red">No</span>
            <% end %>
          </div>
        </div>
        <div class="row nmhxs mtxs-plus">
          <div class="col-xs-6 phxs">
            <b>Production Rental Price</b>
          </div>
          <div class="col-xs-6 phxs text-right">
            <%= number_to_currency @product.production_rental_price %>
          </div>
        </div>
        <div class="row nmhxs mtxs-plus">
          <div class="col-xs-6 phxs">
            <b>Short Rental Price</b>
          </div>
          <div class="col-xs-6 phxs text-right">
            <%= number_to_currency @product.short_rental_price %>
          </div>
        </div>
        <div class="row nmhxs mtxs-plus">
          <div class="col-xs-6 phxs">
            <b>Dimensions</b>
          </div>
          <div class="col-xs-6 phxs text-right">
            <%= @product.dimensions.presence %>
          </div>
        </div>
        <% if @product.tags.any? %>
          <div class="">
            Tags
          </div>
          <% @product.tags.each do |tag| %>
            <div class="">
              <%= tag.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
