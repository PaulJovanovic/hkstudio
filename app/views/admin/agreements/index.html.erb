<div class="row nmhxs">
  <div class="col-lg-8 phxs">
    <table class="row nmhxs mtm full-width">
      <tbody>
        <% @agreements.each_with_index do |agreement, index| %>
          <tr class="<%= index % 2 == 0 ? " bg-13" : " bg-12" %>">
            <td class="plxxxs prxxxs pvxs fwl">
              <%= link_to agreement.name, admin_agreement_path(agreement) %>
            </td>
            <td class="phxxxs pvxs">
              <div class="pull-right">
                <%= link_to edit_admin_agreement_path(agreement), class: "btn btn-primary" do %>
                  <i class="fa fa-edit"></i> <span class="hidden-xs">Edit</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
